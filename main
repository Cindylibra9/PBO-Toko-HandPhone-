package main;
import java.util.Scanner;
public class Main {
    Scanner input = new Scanner(System.in);
        String pilih; 
    public static void main(String[] args) {
        
        // Buat objek HP
        Phone x1 = (Phone) new Xiaomi() {
            @Override
            public void Xiaomi() {
                }
            @Override
            public void Oppo() {
                }
            @Override
            public void Vivo() {
                }} ;
        Phone o1 = new Oppo() {
            @Override
            public void Xiaomi() {
                }
            @Override
            public void Oppo() {
                }
            @Override
            public void Vivo() {
                }};
        Phone v1 = (Phone) new Vivo() {
            @Override
            public void Xiaomi() {
            }
            @Override
            public void Oppo() {
            }
            @Override
            public void Vivo() {
            }};
        
        // Buat objek user pada HP
        PhoneUser a = new PhoneUser(x1) {};
        PhoneUser b = new PhoneUser(o1) {};
        PhoneUser c = new PhoneUser(v1) {};

        // Program input-an
        Scanner input = new Scanner(System.in);
        String pilih; 

            System.out.println(">>>>>>> SISTEM SERVICE HANDPHONE ANDROID <<<<<<<");
            System.out.print("Silahkan masukkan nama anda : ");
            String nama = input.nextLine();
            System.out.println("Halo Saudara/i, " + nama);
            System.out.println("Selamat datang di Service HandPhone Android");
            System.out.println("(Pilih jenis HandPhone Anda terlebih dahulu)");
            System.out.println("[a] XIAOMI");
            System.out.println("[b] OPPO");
            System.out.println("[c] VIVO");
            System.out.print("HandPhone Anda Adalah > ");
            pilih = input.nextLine();            
                   if (pilih.equalsIgnoreCase("a")){
                a1.x();
            } else if (pilih.equalsIgnoreCase("b")){
                b1.o();
            } else if (pilih.equalsIgnoreCase("c")){
                c1.v();
            } else {
                System.out.println("Pilihan Anda Tidak Tersedia");
            }
                   { 
            System.out.println(" ");
            System.out.println("(Untuk mengecek apakah ada kendala pada HandPhone Anda, ikuti langkah berikut!)");
                   }
            while (true) {
            System.out.println(" ");
            System.out.println("[1] Nyalakan HP      ");
            System.out.println("[2] Matikan HP       ");
            System.out.println("[3] Perbesar Volume  ");
            System.out.println("[4] Kecilkan Volume  ");
            System.out.println("[0] Keluar           ");
            System.out.println("---------------------");
            System.out.print("Pilihan > ");
            pilih = input.nextLine();   
                   if (pilih.equalsIgnoreCase("1")){
                a.turnOnThePhone();
            } else if (pilih.equalsIgnoreCase("2")){
                a.turnOffThePhone();
            } else if (pilih.equalsIgnoreCase("3")){
                a.makePhoneLouder();
            } else if (pilih.equalsIgnoreCase("4")){
                a.makePhoneSilent();
            } else if (pilih.equalsIgnoreCase("0")){
                int biaya   = (int) 50000;
                System.out.println("Biaya 1x service : Rp." + biaya + ",-");
                System.out.println("Service sebanyak : "); 
                int jumlah  = input.nextInt();
                float total = jumlah * biaya;
                System.out.println("Saudara/i " + nama + ", total biaya service HP anda adalah Rp." + total + ",-");
                System.out.println(" ");
                System.exit(0);
            } else {
                System.out.println("Pilihan Anda Tidak Tersedia");
            }}}}
