#include <iostream>
#include <conio.h>
#define MAX 5
using namespace std;

struct Stack {
 int tunjuk, data[MAX];
}stack;

void init(){
    stack.tunjuk=-1;
}

bool kosong(){
return stack.tunjuk==-1;
}
bool penuh(){
return stack.tunjuk==MAX-1;
}
void Push(){
    if(penuh()){
        cout<<"Stack Sudah Penuh ";
    }
    else{
        stack.tunjuk++;
        cout<<"Masukkan data kedalam stack : ";
        cin>>stack.data[stack.tunjuk];
    }
}
void Pop(){
    if(kosong()){
        cout<<"Stack Kosong ";
    }
    else{

        cout<<"Data yang dibuang : "<<stack.data[stack.tunjuk];
        stack.tunjuk--;
    }
}
void printStack() {
 if (kosong()) {
  cout << "Stack kosong";
 }
 else {
        cout << "\nStack : ";
  for (int i = stack.tunjuk; i >= 0; i--){
            cout << stack.data[i] << ((i == 0) ? "" : ",");
  }
 }
}

int main(){
    int pilihan, data;
 init();
 do {
    printStack();
  cout << "\n1. Push\n"
        <<"2. Pop\n"
        <<"3. Exit\n"
        <<"Masukkan Pilihan: ";
  cin >> pilihan;
  switch (pilihan)
  {
  case 1:
   Push();
   break;
  case 2:
   Pop();
   break;
        case 3:
            return 0;
  default:
      cout << "Pilihan tidak ada " << endl;
   break;
  }
 } while (pilihan!=3);
}
